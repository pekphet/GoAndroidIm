<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="go.fish.goapp.activity.MainActivity">

    <LinearLayout
        android:id="@+id/ll_userlist"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:gravity="center">
        <Spinner
            android:id="@+id/spi_users"
            android:layout_width="100dp"
            android:minHeight="0dp"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/btn_fresh_spi"
            android:layout_width="80dp"
            android:minHeight="0dp"
            android:layout_marginLeft="20dp"
            android:layout_height="50dp"
            android:text="刷新"
            android:textSize="15dp"
            android:gravity="center"/>


    </LinearLayout>

    <Button
        android:id="@+id/btn_main_add_eqp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:text="+装备"/>
    <Button
        android:id="@+id/btn_main_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:text="+物品"/>

    <View
        android:id="@+id/v_main_ground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>



    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:background="#ffcccc">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_send"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#ccccff"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="发送"/>

    </LinearLayout>

</LinearLayout>
